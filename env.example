# ============ Database Configuration ============
DATABASE_URL="postgresql://username:password@host:port/database"

# ============ Basic Authentication ============
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="12101986"

# ============ Encryption ============
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# ============ Microsoft Teams Integration ============
TEAMS_CLIENT_ID="your-teams-app-client-id"
TEAMS_CLIENT_SECRET="your-teams-app-client-secret"
TEAMS_TENANT_ID="your-azure-tenant-id"

# ============ Multi-tenant Configuration ============
# Enable multi-tenant authentication (allows external users)
TEAMS_MULTITENANT_MODE="false"
# For client-side access to tenant info
NEXT_PUBLIC_TEAMS_TENANT_ID="your-azure-tenant-id"
NEXT_PUBLIC_TEAMS_MULTITENANT_MODE="false"

# ============ Teams Bot Framework ============
MICROSOFT_APP_ID="your-bot-app-id"
MICROSOFT_APP_PASSWORD="your-bot-app-password"

# ============ Webhook Security ============
WEBHOOK_SECRET="your-webhook-validation-secret"

# ============ Azure DevOps Webhook Configuration ============
# Skip signature validation for Azure DevOps webhooks (recommended)
AZURE_DEVOPS_SKIP_SIGNATURE="true"

# ============ Application Configuration ============
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# ============ Development Only ============
NODE_ENV="development"

